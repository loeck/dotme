{
  "presets": [
    [
      "@babel/preset-env",
      {
        "loose": true,
        "targets": {
          "browsers": ["last 2 versions", "ie >= 11"],
          "node": "current"
        }
      }
    ],
    "@babel/preset-react",
    [
      "@babel/preset-stage-0",
      {
        "decoratorsLegacy": true
      }
    ]
  ],
  "plugins": [
    "babel-plugin-add-module-exports",
    [
      "babel-plugin-styled-components",
      {
        "displayName": false,
        "ssr": true
      }
    ],
    [
      "babel-plugin-module-resolver",
      {
        "root": ["src"]
      }
    ]
  ]
}
